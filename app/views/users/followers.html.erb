<div class="row">
    <div  class="col-md-3">
        <aside>
            <section class="user_info">
                <h1>
                <%= gravatar_for @user %>
                <span><%=  @user.name %></span>
                <span>rejon  :<%= @user.area %></span>
              </h1>
            </section>
        </aside>
    </div>
    <div class="col-md-9">
        
        <span><%= link_to "フォロー",followings_user_path(@user) %></span>
        <span>フォロワー</span>
    </div>
    <div class="col-md-9">    
        <% @follower.each do |follower_user| %>
            <div class="follow_user col-md-3">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <%= link_to gravatar_for(follower_user, size: 50), follower_user -%>
                    </div>
                    <div class="col-md-7">
                        <!--<h2><%= link_to follower_user.name, follower_user %><h2>-->
                        <span class="user"><%= link_to follower_user.name, follower_user %></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="profile"><%= follower_user.profile %></div>
                </div>
            </div>
        <% end %>
    </div>
</div>